{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "id": "User",
    "type": "object",
    "properties": {
        "id": {
            "type": "string"
        },
        "name": {
           "type": "string"
        },
        "email": {
            "type": "string"
        },
        "password": {
            "type": "string"
        },
        "type": {
            "type": "string",
            "enum": ["user", "admin"]
        }
    },
    "required": [
        "name",
        "email",
        "password"
    ]
}